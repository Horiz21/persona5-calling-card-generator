<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:P5CCG"
             mc:Ignorable="d"
			 d:DesignWidth="320" d:DesignHeight="36"
             x:Class="P5CCG.Persona5StyledRadioButton">
	<Grid x:Name="MainGrid">
		<local:Persona5QuadrilateralBackground x:Name="BackgroundPath"/>
		<RadioButton x:Name="MainRadioButton"
					 GroupName="{Binding GroupName, RelativeSource={RelativeSource AncestorType={x:Type local:Persona5StyledRadioButton}}, Mode=TwoWay}"
					 Opacity="0"
					 IsChecked="{Binding RadioButtonIsChecked, RelativeSource={RelativeSource AncestorType={x:Type local:Persona5StyledRadioButton}}, Mode=TwoWay}"/>
		<Image x:Name="ControlImage"
			   Source="{Binding ControlImageSource, RelativeSource={RelativeSource AncestorType={x:Type local:Persona5StyledRadioButton}}}"
			   Stretch="UniformToFill"/>
		<Label x:Name="ControlText"
			   Content="{Binding ControlTextContent, RelativeSource={RelativeSource AncestorType={x:Type local:Persona5StyledRadioButton}}}"
			   HorizontalContentAlignment="Center"
			   VerticalContentAlignment="Center"
			   IsHitTestVisible="False"/>
	</Grid>
</UserControl>